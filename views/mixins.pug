//- service item
mixin serviceItem(icon,title,desc)
    .service-item
        .service-icon
            img(src= icon)
        h3.global-heading.global-heading--normal.service-title= title
        p.global-text.service-text= desc
//- review item card
mixin reviewCard(image,name,job,desc,rating)
    .review-card
        .review-avatar
            img(srcset= image)
        h3.review-name= name
        span.review-job= job
        p.review-desc= desc
        .review-rating
            img(src="./images/icon/icon-star.svg", alt="icon star")
            span= rating
        .review-quote
            img(src="./images/icon/icon-quote.svg", alt="icon quote")
//-  blog item
mixin blogItem(image,title,desc)
    .blog-item
        .blog-image
            img(srcset= image, alt= image)
        .blog-content 
            h3.blog-title= title
            p.blog-desc= desc


